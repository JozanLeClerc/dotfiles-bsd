#!/usr/local/bin/dash

xset r rate 200 150
setxkbmap -layout us,fr -option grp:alt_shift_toggle
setxkbmap -option caps:none
if ! xrandr | grep 'HDMI-1 connected' >/dev/null 2>&1; then
	if ! xrandr | grep 'VGA-1 connected' >/dev/null 2>&1; then
		echo
		xmodmap -e 'keycode 9 = Tab'
		xmodmap -e 'keycode 23 = Escape'
		xmodmap -e 'keycode 37 = Tab'
		xmodmap -e 'keycode 66 = Control'
	fi
else
	xmodmap -e 'keycode 9 = Tab'
	xmodmap -e 'keycode 23 = Escape'
	xmodmap -e 'keycode 66 = Tab'
fi
notify-send -u low -t 2000 'kb' 'ï„œ  Keyboard set'

# vim: filetype=sh
