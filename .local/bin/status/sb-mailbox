#!/bin/sh

# Displays number of unread mail and an loading icon if updating.
# When clicked, brings up `neomutt`.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e neomutt ;;
	2) setsid -f mw -Y >/dev/null ;;
	3) notify-send "ðŸ“¬ Mail module" "\- Shows unread mail
- Shows ðŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

icon="ï›­"

mb_a="$(ls "${MAIL:-/var/mail/jozan}"/bousset.rudy@gmail.com/INBOX/new/ | wc -l 2>/dev/null)"
if [ "$mb_a" -gt 0 ]; then
	echo -n " $icon  A:" $mb_a
fi

mb_b="$(ls "${MAIL:-/var/mail/jozan}"/olsen.oyvind.nor@gmail.com/INBOX/new/ | wc -l 2>/dev/null)"
if [ "$mb_b" -gt 0 ]; then
	echo -n " $icon  B:" $mb_b
fi

pidof mbsync >/dev/null 2>&1 && echo " ï‘ª"
