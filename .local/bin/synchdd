#!/bin/csh -e

dest="$HOME"/exthdd/

[ -d $dest ] || exit 1
# books
rsync -avhk --delete-after \
	$HOME/books $dest
# docs
rsync -avhk --delete-after \
	--exclude 'dotfiles-*' \
	--exclude 'conffiles-bsd' \
	$HOME/docs $dest
# mu
rsync -avhk --delete-after \
	$HOME/mu $dest
# pics
rsync -avhk --delete-after \
	$HOME/pics $dest
# vids
rsync -avhk --delete-after \
	$HOME/vids $dest
