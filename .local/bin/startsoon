#!/usr/local/bin/dash

randcol() {
	col=$(shuf -i 1-9 -n1)
	pri="[1;3${col}m"
	printf "\033%s" "$pri"
}

nocol() {
	printf "\033[0m"
}

while true; do
	clear
	printf "\n"
	randcol
	figlet -s -L -c -t \
		-d "$XDG_PACKAGE_HOME"/stream_figfonts \
		-f banner3_d \
		"Stream starting soon"
	printf "\n\n"
	nocol
	icat "$HOME"/pics/profile/caco.png -w 52 -x 62
	printf "\033[1;36m\n"
	figlet -s -L -c -t \
		-d "$XDG_PACKAGE_HOME"/stream_figfonts \
		-f $(ls "$XDG_PACKAGE_HOME"/stream_figfonts |
			tr '.' '\t' |
			awk '{print $1}' |
			shuf -n 1) \
		"Take a coffee!"
	sleep 10
done

# vim: filetype=sh
