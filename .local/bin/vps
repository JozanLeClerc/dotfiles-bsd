#!/bin/sh

serv_addr="root@jozanofastora.xyz"

rsync -urvhP --delete-after \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  "$HOME"/dev/web/jozanofastora-www/ \
	  $serv_addr:/usr/local/www/jozan
rsync -urvhP --delete-after \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  --exclude 'users' \
	  "$HOME"/dev/web/gitjoe-www/ \
	  $serv_addr:/usr/local/www/gitjoe
rsync -urvhP --delete-after \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  "$HOME"/dev/web/jozanofastora-gemini/ \
	  $serv_addr:/usr/local/gemini
rsync -urvhP --delete-after \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  --exclude 'LICENSE' \
	  "$HOME"/dev/perl/jozanofastora-scripts/ \
	  $serv_addr:/root/scripts
rsync -urvhP "$HOME/.config/newsboat/urls" $serv_addr:/root/backup/apps/newsboat
