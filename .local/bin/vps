#!/bin/sh

serv_addr="95.179.223.82"
serv_port="10022"

# joe-www
rsync -avh --port=$serv_port --no-o --no-g --progress --delete-after \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  --exclude 'LICENSE' \
	  --exclude 'asm-example.cgi' \
	  "$HOME"/dev/web/joe-www/ \
	  root@$serv_addr:/var/jail/www/usr/local/www/jozan
# gitjoe-cgit
rsync -avh --port=$serv_port --no-o --no-g --progress --delete-after \
	  --exclude 'cgit.cgi' \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  --exclude 'LICENSE' \
	  "$HOME"/dev/web/gitjoe-cgit/ \
	  root@$serv_addr:/usr/local/www/gitjoe
rsync -avh --port=22 --no-o --no-g --progress \
	  "$HOME"/dev/perl/gitjoe-scripts/git-ro-daemon.csh \
	  git-ro@$serv_addr:/usr/local/git/git-ro
# joe-scripts
rsync -avh --port=$serv_port --no-o --no-g --progress --delete-after \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  --exclude 'LICENSE' \
	  "$HOME"/dev/perl/joe-scripts/ \
	  root@$serv_addr:/root/bin/joe
# gitjoe-scripts
rsync -avh --port=$serv_port --no-o --no-g --progress --delete-after \
	  --exclude '.*' \
	  --exclude 'README.org' \
	  --exclude 'LICENSE' \
	  "$HOME"/dev/perl/gitjoe-scripts/src/ \
	  root@$serv_addr:/root/bin/gitjoe
# backups
rsync -avh --port=$serv_port --no-o --no-g --progress "$XDG_CONFIG_HOME"/newsboat/urls root@$serv_addr:/root/backup/apps/newsboat
rsync -avh --port=$serv_port --no-o --no-g --progress --delete-after "$XDG_DATA_HOME"/calcurse/ root@$serv_addr:/root/backup/apps/calcurse
rsync -avh --port=$serv_port --no-o --no-g --progress "$XDG_DATA_HOME"/abook/addressbook root@$serv_addr:/root/backup/apps/abook
